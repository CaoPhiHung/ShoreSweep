<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="entityFramework" type="System.Data.Entity.Internal.ConfigFile.EntityFrameworkSection, EntityFramework, Version=6.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false" />
    <!-- For more information on Entity Framework configuration, visit http://go.microsoft.com/fwlink/?LinkID=237468 --></configSections>
  <appSettings>
    <add key="PreserveLoginUrl" value="true" />
    <add key="microsoft.visualstudio.teamsystems.aspnetdevserver:/" value="9090;True;6708;1;-8588185029770323041" />
  </appSettings>
  <connectionStrings>
    <add name="ClarityDB" providerName="System.Data.SqlClient" connectionString="Server=.\SQLEXPRESS;Initial Catalog=ShoreSweep;Integrated Security=SSPI;MultipleActiveResultSets=true" />
  </connectionStrings>
  <system.web>
    <httpRuntime maxRequestLength="20480" />
    <compilation debug="true" targetFramework="4.5" />
    <httpHandlers>
      <!-- Get rid of default handlers -->
      <clear />
      <!-- Requests for static files should be forwardered to default HTTP Handler -->
      <add verb="GET" path="*.html,*.js,*.map,*.css,*.png,*.jpg,*.gif,*.ico,*.ttf,*.eot,*.svg,*.woff,robots.txt,*.pptx,*.xlsx,*.json" type="System.Web.DefaultHttpHandler" />
      <!-- API requests should be forwarded to the Rest API handler -->
      <add verb="GET,POST,PUT,DELETE" path="/api/*,/api/*/*,/api/*/*/*" type="ShoreSweep.Api.Framework.RestApi, ShoreSweep.Api" />
    </httpHandlers>
    <authentication mode="Forms">
      <forms loginUrl="/#/login" timeout="240" />
    </authentication>
  </system.web>
  <system.webServer>
    <validation validateIntegratedModeConfiguration="false" />
    <modules runAllManagedModulesForAllRequests="true" />
    <handlers>
      <!--JSON requests should be forwarded to ISAPI module-->
      <add name="JSON" path="*.json" verb="*" modules="IsapiModule" scriptProcessor="C:\Windows\System32\inetsrv\asp.dll" resourceType="Unspecified" preCondition="bitness64" />
      <!--API requests should be forwarded to the Rest API handler-->
      <add name="RestApi" verb="GET,POST,DELETE,PUT" path="api/*" type="ShoreSweep.Api.Framework.RestApi, ShoreSweep.Api" resourceType="Unspecified" preCondition="integratedMode" />
    </handlers>
    <directoryBrowse enabled="false" />
    <rewrite>
      <rules>
        <clear />
        <rule name="AngularJS">
          <match url="(.*)" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" />
          </conditions>
          <action type="Rewrite" url="default.html" />
        </rule>
      </rules>
    </rewrite>
    <defaultDocument>
      <files>
        <add value="default.html" />
      </files>
    </defaultDocument>
    <!--<staticContent>
      <mimeMap fileExtension=".json" mimeType="application/json" />
    </staticContent>-->
    <security>
      <requestFiltering>
        <!--20MB-->
        <requestLimits maxAllowedContentLength="20971520" />
      </requestFiltering>
    </security>
  </system.webServer>
  <entityFramework>
    <defaultConnectionFactory type="System.Data.Entity.Infrastructure.SqlConnectionFactory, EntityFramework" />
    <providers>
      <provider invariantName="System.Data.SqlClient" type="System.Data.Entity.SqlServer.SqlProviderServices, EntityFramework.SqlServer" />
    </providers>
  </entityFramework>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30ad4fe6b2a6aeed" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-8.0.0.0" newVersion="8.0.0.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
</configuration>